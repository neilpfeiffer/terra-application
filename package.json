{
  "name": "@cerner/terra-application",
  "main": "lib/application-base/ApplicationBase.js",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.35.0",
  "description": "A framework to support application development with Terra components",
  "engines": {
    "node": ">=8.9.2 <11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cerner/terra-application"
  },
  "keywords": [
    "Cerner",
    "Terra",
    "terra-application",
    "Application",
    "UI"
  ],
  "author": "Cerner Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/cerner/terra-application/issues"
  },
  "eslintConfig": {
    "extends": "@cerner/terra",
    "overrides": [
      {
        "files": [
          "src/terra-dev-site/**/*.jsx"
        ],
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "import/no-unresolved": "off",
          "import/extensions": "off",
          "import/no-webpack-loader-syntax": "off",
          "import/first": "off",
          "import/no-duplicates": "off"
        }
      }
    ],
    "rules": {
      "react/forbid-prop-types": "off"
    },
    "settings": {
      "polyfills": [
        "Promise",
        "Map"
      ]
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-terra",
    "rules": {
      "scss/at-mixin-pattern": "^(terra-)[a-z]+([a-z0-9-]+[a-z0-9]+)?$"
    }
  },
  "files": [
    "lib",
    "src",
    "translations",
    "tests/wdio/*-spec.js",
    "tests/wdio/**/*-spec.js"
  ],
  "scripts": {
    "clean": "rm package-lock.json; rm -rf node_modules",
    "clean:install": "npm run clean && npm install",
    "clean:obsolete-snapshots": "npm test -- -u",
    "compile": "babel src --out-dir lib --copy-files",
    "compile:dev": "webpack",
    "compile:prod": "rm -rf ./build; webpack -p",
    "compile:lowlight": "rm -rf ./build; THEME=clinical-lowlight-theme webpack -p",
    "compile:fusion": "rm -rf ./build; THEME=orion-fusion-theme webpack -p",
    "heroku-postbuild": "npm install --only=dev && npm run compile:prod",
    "jest": "jest --config jestconfig.js",
    "jest:coverage": "jest --coverage --config jestconfig.js",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint --ext .js,.jsx .",
    "lint:scss": "stylelint src/**/*.scss",
    "precompile": "rm -rf lib",
    "prepare": "npm run compile",
    "prepare-for-release": "terra prepare-for-release",
    "start": "webpack-dev-server",
    "start-prod": "webpack-dev-server -p",
    "start-heroku": "terra express-server --port $PORT --site './build' ",
    "start-static": "npm run compile:prod && terra express-server --site ./build",
    "test": "npm run lint && npm run jest",
    "wdio-default": "wdio",
    "wdio-locale": "LOCALE=de wdio",
    "wdio-lowlight": "THEME=clinical-lowlight-theme wdio",
    "wdio-fusion": "THEME=orion-fusion-theme wdio",
    "wdio": "npm run wdio-default && npm run wdio-locale && npm run wdio-lowlight && npm run wdio-fusion"
  },
  "dependencies": {
    "@formatjs/intl-relativetimeformat": "^8.0.0",
    "classnames": "^2.2.5",
    "eventemitter3": "^4.0.4",
    "focus-trap-react": "^6.0.0",
    "keycode-js": "^2.0.1",
    "lodash.debounce": "^4.0.8",
    "intl": "^1.2.5",
    "intl-locales-supported": "^1.8.4",
    "prop-types": "^15.5.8",
    "react-onclickoutside": "^6.7.1",
    "resize-observer-polyfill": "^1.5.1",
    "terra-action-footer": "^2.52.0",
    "terra-action-header": "^2.62.0",
    "terra-alert": "^4.31.0",
    "terra-avatar": "^3.8.0",
    "terra-breakpoints": "^2.0.0",
    "terra-button": "^3.42.0",
    "terra-content-container": "^3.14.0",
    "terra-disclosure-manager": "^4.27.0",
    "terra-icon": "^3.36.0",
    "terra-modal-manager": "^6.20.0",
    "terra-navigation-prompt": "^1.40.0",
    "terra-notification-dialog": "^4.0.0",
    "terra-overlay": "^3.32.0",
    "terra-popup": "^6.40.0",
    "terra-scroll": "^2.18.0",
    "terra-slide-panel-manager": "^5.19.0",
    "terra-status-view": "^4.10.0",
    "terra-theme-context": "^1.0.0",
    "terra-theme-provider": "^4.0.0",
    "terra-visually-hidden-text": "^2.30.0",
    "uuid": "^3.0.0",
    "wicg-inert": "^3.0.2"
  },
  "peerDependencies": {
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-intl": "^5.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "7.10.5",
    "@babel/parser": "7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-transform-async-to-generator": "^7.8.3",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.1",
    "@cerner/browserslist-config-terra": "^3.1.0",
    "@cerner/eslint-config-terra": "^4.0.0",
    "@cerner/terra-cli": "^1.1.0",
    "@cerner/terra-enzyme-intl": "^4.0.0",
    "@cerner/terra-open-source-scripts": "^1.1.0",
    "@cerner/webpack-config-terra": "^1.2.0",
    "@testing-library/react": "^10.0.4",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.8.0",
    "check-installed-dependencies": "^1.0.0",
    "core-js": "^3.6.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "^6.8.0",
    "gh-pages": "^2.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "pacote": "^11.1.11",
    "raf": "^3.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-intl": "^5.8.2",
    "regenerator-runtime": "^0.13.5",
    "stylelint": "^10.0.1",
    "stylelint-config-terra": "^3.3.0",
    "terra-collapsible-menu-view": "^6.29.0",
    "terra-toolkit": "^6.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
